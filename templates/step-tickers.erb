# List of NTP servers used by the ntpdate service.

<% if @preferred_servers.empty? -%>
<% [@servers].flatten.each do |server| -%>
<%= server %>
<% end -%>
<% else -%>
<% [@servers].flatten.each do |server| -%>
<% if @preferred_servers.include?(server) -%>
<%= server %>
<% end -%>
<% end -%>
<% end -%>

